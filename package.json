{
	"name": "react-boilerplate",
	"version": "1.0.0",
	"description": "React Boilerplate",
	"author": "Alan Gomes",
	"repository": {
		"type": "git",
		"url": "git@github.com:alanhr/react-boilerplate.git"
	},
	"nyc": {
		"sourceMap": false,
		"instrument": false,
		"exclude": [
			"**/*.spec.js",
			"build",
			"mocha.*"
		]
	},
	"scripts": {
		"start": "NODE_ENV=production npm run server",
		"dev": "NODE_ENV=development babel-node server/index.js",
		"server": "nodemon --exec babel-node server/index.js",
		"build": "webpack --config ./webpack/webpack.config.prod.js",
		"test": "mocha --opts mocha.opts \"./app/**/*.spec.js\"",
		"cover": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --opts mocha.opts \"./app/**/*.spec.js\"",
		"test:watch": "npm run test -- --watch"
	},
	"license": "ISC",
	"dependencies": {
		"babel-cli": "^6.16.0",
		"babel-core": "^6.17.0",
		"babel-polyfill": "^6.16.0",
		"ejs": "^2.5.2",
		"express": "^4.14.0",
		"nodemon": "^1.11.0",
		"react": "^15.3.2",
		"react-dom": "^15.3.2",
		"react-hot-loader": "^3.0.0-beta.6",
		"react-redux": "^4.4.5",
		"react-router": "^3.0.0",
		"react-router-redux": "^4.0.7",
		"redux": "^3.6.0",
		"redux-logger": "^2.7.4",
		"redux-thunk": "^2.1.0"
	},
	"devDependencies": {
		"autoprefixer": "^6.5.1",
		"babel-eslint": "^7.0.0",
		"babel-loader": "^6.2.5",
		"babel-plugin-istanbul": "^2.0.3",
		"babel-plugin-react-html-attrs": "^2.0.0",
		"babel-plugin-transform-class-properties": "^6.16.0",
		"babel-plugin-transform-decorators-legacy": "^1.3.4",
		"babel-plugin-transform-flow-strip-types": "^6.14.0",
		"babel-preset-es2015": "^6.16.0",
		"babel-preset-es2017": "^6.16.0",
		"babel-preset-react": "^6.16.0",
		"babel-preset-stage-0": "^6.16.0",
		"chai": "^3.5.0",
		"chai-enzyme": "^0.5.2",
		"clean-webpack-plugin": "^0.1.13",

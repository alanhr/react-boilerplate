		"css-modules-require-hook": "^4.0.5",
		"css-mqpacker": "^5.0.1",
		"ejs-loader": "^0.3.0",
		"enzyme": "^2.5.1",
		"eslint": "^3.6.0",
		"eslint-config-airbnb": "^12.0.0",
		"eslint-config-airbnb-flow": "^1.0.2",
		"eslint-import-resolver-webpack": "^0.6.0",
		"eslint-loader": "^1.6.0",
		"eslint-plugin-import": "^1.16.0",
		"eslint-plugin-jsx-a11y": "^2.2.2",

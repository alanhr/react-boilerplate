{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 7
	},
	"extends": [
		"airbnb",
		"airbnb-flow"
	],
	"env": {
		"browser": true,
		"node": true,
		"jasmine": true
	},
	"rules": {
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"react/jsx-filename-extension": 0,
		"react/jsx-no-undef": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": 0
	},
	"settings": {
		"import/resolver": {
			"webpack": {
				"config": "webpack.config.default.js"
			}
		}
	}
}
